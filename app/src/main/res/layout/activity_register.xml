<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5F7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/app_toolbar"/>


    <EditText
        android:id="@+id/id_et_username"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:inputType="text"
        android:hint="请输入用户名"
        android:digits="@string/edit_digits"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColorHint="@color/color999" />

    <EditText
        android:id="@+id/id_et_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:hint="请输入密码"
        android:inputType="textWebPassword"
        android:maxLength="16"
        android:paddingLeft="8dp"
        android:textColorHint="@color/color999" />

    <EditText
        android:id="@+id/id_et_repassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:hint="重复输入密码"
        android:inputType="textWebPassword"
        android:maxLength="16"
        android:paddingLeft="8dp"
        android:textColorHint="@color/color999" />

    <EditText
        android:id="@+id/id_et_sno"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:inputType="number"
        android:hint="请输入学号"
        android:paddingLeft="8dp"
        android:textColorHint="@color/color999"
        />


    <EditText
        android:id="@+id/id_et_phone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:digits="@string/edit_digits"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="16"
        android:paddingLeft="8dp"
        android:textColorHint="@color/color999" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/id_et_writesms"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:background="#ffffff"
            android:digits="@string/edit_digits"
            android:hint="输入验证码"
            android:inputType="phone"
            android:maxLength="8"
            android:paddingLeft="8dp"
            android:textColorHint="@color/color999" />
        <Button
            android:id="@+id/id_btn_sendsms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            />
    </LinearLayout>

    <Button
        android:id="@+id/id_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/btn_bg"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>